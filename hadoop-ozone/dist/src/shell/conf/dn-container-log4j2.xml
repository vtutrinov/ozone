<Configuration name="PropertiesConfig" monitorInterval="30">
    <Properties>
        <Property name="hadoop.log.dir">${sys:hadoop.log.dir}</Property>
        <Property name="hostName">${hostName}</Property>
    </Properties>

    <Appenders>
        <!-- Uncomment following section to enable logging to console appender also
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{DEFAULT} | %-5level | %msg | %throwable{3} %n"/>
        </Console>
        -->

        <RollingFile name="RollingContainer" fileName="${hadoop.log.dir}/dn-container-${hostName}.log" filePattern="${hadoop.log.dir}/dn-container-${hostName}-%d{yyyy-MM-dd-HH-mm-ss}-%i.log.gz">
            <PatternLayout pattern="%d{DEFAULT} | %-5level | %msg | %throwable{3} %n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="256MB"/>
            </Policies>
            <DefaultRolloverStrategy max="50">
                <Delete basePath="${hadoop.log.dir}" maxDepth="1">
                    <IfFileName glob="dn-container-*.log.gz"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="ContainerLog" level="INFO" additivity="false">
            <AppenderRef ref="RollingContainer"/>
        </Logger>

        <Root level="INFO">
            <!-- Uncomment following section to enable logging to console appender also
            <AppenderRef ref="STDOUT"/>
            -->
        </Root>
    </Loggers>
</Configuration>
